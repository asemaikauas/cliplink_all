# Production Environment Configuration for Cliplink
# Copy this file to .env and update with your production values

# Database Configuration
DB_NAME=cliplink
DB_USER=cliplink
DB_PASSWORD=your-secure-database-password-here
DB_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# Application Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000
ENV=production
DEBUG=false
LOG_LEVEL=INFO

# Clerk Authentication
CLERK_DOMAIN=your-domain.clerk.accounts.dev
JWKS_URL=https://your-domain.clerk.accounts.dev/.well-known/jwks.json
VITE_CLERK_PUBLISHABLE_KEY=pk_live_your-publishable-key-here

# CORS and API Configuration (frontend URL for CORS)
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com,https://www.your-domain.com
API_BASE_URL=http://cliplink_backend:8000

# External API Keys
GROQ_API_KEY=your-groq-api-key-here
YOUTUBE_TRANSCRIPT_API=your-youtube-api-key-here

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account-name
AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-storage-account-name;AccountKey=your-storage-account-key;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=cliplink

# Nginx Configuration (if using SSL termination)
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Security (generate strong random values for production)
SECRET_KEY=your-super-secret-key-here
JWT_SECRET=your-jwt-secret-key-here

# Performance
UVICORN_WORKERS=1
UVICORN_MAX_WORKERS=4

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn-here
ENABLE_METRICS=true

# Cleanup Configuration (prevents infinite local storage growth)
AGGRESSIVE_CLEANUP=true
CLEANUP_MAX_FILE_AGE_HOURS=2 